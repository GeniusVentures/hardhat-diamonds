{
  "name": "hardhat-diamonds",
  "version": "0.0.1",
  "description": "Tools for deploying and interfacing with ERC-2535 Diamond Proxies",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "diamond",
    "diamond-proxy",
    "diamond-upgradeable",
    "blockchain"
  ],
  "authors": [
    "Am0rfu5"
  ],
  "license": "MIT",
  "repository": "github:GeniusVentures/hardhat-diamonds",
  "bugs": {
    "url": "https://github.com/GeniusVentures/hardhat-diamonds/issues"
  },
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "test": "npx hardhat test",
    "test:comprehensive": "npx hardhat test test/unit/core/DiamondsConfig.test.ts test/unit/core/HardhatPlugin.test.ts test/integration/e2e/ConfigurationManagement.test.ts",
    "test:core": "npx hardhat test test/unit/core/DiamondsConfig.test.ts test/unit/core/HardhatPlugin.test.ts",
    "test:existing": "npx hardhat test test/unit/diamonds-config.test.ts test/project.test.ts",
    "test:config": "npx hardhat test test/integration/e2e/ConfigurationManagement.test.ts"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^18",
    "chai": "^4.2.0",
    "diamonds": "git+https://github.com/GeniusVentures/diamonds.git",
    "ethers": "^5.8.0",
    "hardhat": "^2.22.19",
    "mocha": "^7.1.2",
    "prettier": "^3.5.3",
    "sinon": "^19.0.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "peerDependencies": {
    "diamonds": "^0.0.1",
    "hardhat": "^2.0.0"
  },
  "packageManager": "yarn@4.6.0"
}
